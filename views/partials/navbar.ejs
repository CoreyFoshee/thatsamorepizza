<script>
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenuModal = document.getElementById('mobile-menu-modal');
    const mobileMenuClose = document.getElementById('mobile-menu-close');
    const hamburgerLines = document.querySelectorAll('.hamburger-line-1, .hamburger-line-2, .hamburger-line-3');
    
    // Toggle mobile menu
    function toggleMobileMenu() {
        const isOpen = mobileMenuModal.classList.contains('translate-x-0');
        
        if (isOpen) {
            // Close menu
            mobileMenuModal.classList.remove('translate-x-0');
            mobileMenuModal.classList.add('translate-x-full');
            // Reset hamburger
            hamburgerLines.forEach(line => line.classList.remove('rotate-45', '-rotate-45', 'opacity-0'));
        } else {
            // Open menu
            mobileMenuModal.classList.remove('translate-x-full');
            mobileMenuModal.classList.add('translate-x-0');
            // Animate hamburger to X
            hamburgerLines[0].classList.add('rotate-45', 'top-4');
            hamburgerLines[1].classList.add('opacity-0');
            hamburgerLines[2].classList.add('-rotate-45', 'top-4');
        }
    }
    
    // Event listeners
    mobileMenuBtn.addEventListener('click', toggleMobileMenu);
    mobileMenuClose.addEventListener('click', toggleMobileMenu);
    
    // Close menu when clicking on a link
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    mobileNavLinks.forEach(link => {
        link.addEventListener('click', function() {
            // Close menu after a short delay to allow navigation
            setTimeout(() => {
                toggleMobileMenu();
            }, 100);
        });
    });
    
    // Close menu when clicking outside
    mobileMenuModal.addEventListener('click', function(e) {
        if (e.target === mobileMenuModal) {
            toggleMobileMenu();
        }
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && mobileMenuModal.classList.contains('translate-x-0')) {
            toggleMobileMenu();
        }
    });
});
</script>
