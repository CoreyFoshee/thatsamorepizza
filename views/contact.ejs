<script>
// Load and display business hours on contact page
document.addEventListener('DOMContentLoaded', function() {
    const contactHoursElement = document.getElementById('contact-hours');
    
    if (contactHoursElement) {
        // Fetch hours from backend
        fetch('/api/hours')
            .then(response => response.json())
            .then(data => {
                if (data.success && data.data.businessHours) {
                    updateContactHours(data.data.businessHours, contactHoursElement);
                } else {
                    updateContactHoursWithDefaults(contactHoursElement);
                }
            })
            .catch(error => {
                console.error('Error fetching hours:', error);
                updateContactHoursWithDefaults(contactHoursElement);
            });
    }
    
    function updateContactHours(businessHours, container) {
        const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
        container.innerHTML = '';
        
        days.forEach((day, index) => {
            const dayData = businessHours[index] || { day, hours: 'Closed', open: false };
            const dayP = document.createElement('p');
            dayP.innerHTML = `<strong>${day}:</strong> ${dayData.hours}`;
            if (!dayData.open) {
                dayP.classList.add('text-red-600');
            }
            container.appendChild(dayP);
        });
    }
    
    function updateContactHoursWithDefaults(container) {
        const defaultHours = {
            0: { day: 'Sunday', hours: '11:00 AM - 8:00 PM', open: true },
            1: { day: 'Monday', hours: 'Closed', open: false },
            2: { day: 'Tuesday', hours: '11:00 AM - 8:00 PM', open: true },
            3: { day: 'Wednesday', hours: '11:00 AM - 8:00 PM', open: true },
            4: { day: 'Thursday', hours: '11:00 AM - 8:00 PM', open: true },
            5: { day: 'Friday', hours: '11:00 AM - 9:00 PM', open: true },
            6: { day: 'Saturday', hours: '11:00 AM - 9:00 PM', open: true }
        };
        updateContactHours(defaultHours, container);
    }
});
</script>
